<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout_discvertical"
    android:elevation="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="24dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_photo_item_discvertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_cats"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <include
                layout="@layout/txt_item_discussion_list"/>

        </RelativeLayout>


    </LinearLayout>






    <View
        android:layout_marginTop="@dimen/top_divider_discussion_list_vertical"
        android:layout_marginBottom="@dimen/bot_divider_discussion_list_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/hint_color"/>

</LinearLayout>
