<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/hint_input</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:paddingStart">@dimen/container_start</item>
        <item name="android:paddingEnd">@dimen/container_end</item>
        <item name="android:fontFamily">@font/poppin</item>
    </style>



    <!-- Black Text. -->

    <style name="BaseTextBlack" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppin</item>
    </style>

    <style name="BaseTextBlackBold" parent="BaseTextBlack">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="BaseTextBlackContainer" parent="BaseTextBlack">
        <item name="android:layout_marginStart">@dimen/container_start</item>
        <item name="android:layout_marginEnd">@dimen/container_end</item>
    </style>

    <style name="BaseTextBlackBoldContainer" parent="BaseTextBlackBold">
        <item name="android:layout_marginStart">@dimen/container_start</item>
        <item name="android:layout_marginEnd">@dimen/container_end</item>
    </style>

    <!-- Hint Text. -->

    <style name="BaseTextGrey" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/poppin</item>
    </style>

    <style name="BaseTextGreytBold" parent="BaseTextBlack">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="BaseTextGreyContainer" parent="BaseTextBlack">
        <item name="android:layout_marginStart">@dimen/container_start</item>
        <item name="android:layout_marginEnd">@dimen/container_end</item>
    </style>

    <style name="BaseTextGreyBoldContainer" parent="BaseTextBlackBold">
        <item name="android:layout_marginStart">@dimen/container_start</item>
        <item name="android:layout_marginEnd">@dimen/container_end</item>
    </style>

    <!-- Button Text. -->

    <style name="ButtonBase" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppin</item>
        <item name="android:background">@drawable/selector_btndef</item>
    </style>


</resources>
